{
  "manifest_version": 2,

  "name": "ShortText - Article Summaries",
  "description": "This extension auto-generates summaries of news articles, and allows you to post them to your Twitter or Linkedin account.",
  "version": "1.0",
  "icons": {
    "32": "icons/icon32.png",
    "16": "icons/icon16.png"
  },

  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/sharing/share-offsite/*"],
      "js": ["utilities.js"]
    }
  ],

  "content_security_policy": "script-src 'self' https://*.google.com 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "http://ec2-54-67-4-85.us-west-1.compute.amazonaws.com:8000/"
  ]
}

